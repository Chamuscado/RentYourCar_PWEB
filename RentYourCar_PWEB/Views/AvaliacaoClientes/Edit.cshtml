<style>
    .slidecontainer {
        width: 100%;
    }

    .slider {
        -webkit-appearance: none;
        width: 100%;
        height: 5px;
        border-radius: 5px;
        background: #d3d3d3;
        outline: none;
        opacity: 0.7;
        -webkit-transition: .2s;
        transition: opacity .2s;
    }

        .slider:hover {
            opacity: 1;
        }

        .slider::-webkit-slider-thumb {
            -webkit-appearance: none;
            width: 20px;
            height: 20px;
            background: #033c73;
            cursor: pointer;
            border-radius: 50%;
        }

        .slider::-moz-range-thumb {
            width: 20px;
            height: 20px;
            background: #033c73;
            cursor: pointer;
            border-radius: 50%;
        }

    span {
        margin-left: 5px;
    }
</style>

@model RentYourCar_PWEB.Models.AvaliacaoCliente

@{
    ViewBag.Title = "Editar Avaliação de Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-header">@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AluguerId)

        <div class="form-group">
            @Html.LabelFor(model => model.Limpeza, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Limpeza, new { htmlAttributes = new { @class = "slider", Type = "range", min = "1", max = "5", id = "LimpezaSlider" } })
                <span class="control-label h3" id="LimpezaValue"></span>
                @Html.ValidationMessageFor(model => model.Limpeza, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cuidado, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cuidado, new { htmlAttributes = new { @class = "slider", Type = "range", min = "1", max = "5", id = "CuidadoSlider" } })
                <span class="control-label h3" id="CuidadoValue"></span>
                @Html.ValidationMessageFor(model => model.Cuidado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pontualidade, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pontualidade, new { htmlAttributes = new { @class = "slider", Type = "range", min = "1", max = "5", id = "PontualidadeSlider" } })
                <span class="control-label h3" id="PontualidadeValue"></span>
                @Html.ValidationMessageFor(model => model.Pontualidade, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pagamento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pagamento, new { htmlAttributes = new { @class = "slider", Type = "range", min = "1", max = "5", id = "PagamentoSlider" } })
                <span class="control-label h3" id="PagamentoValue"></span>
                @Html.ValidationMessageFor(model => model.Pagamento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Comentario, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Comentario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comentario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Alterar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {

    <script>
        var slider0 = document.getElementById("LimpezaSlider");
        var output0 = document.getElementById("LimpezaValue");
        output0.innerHTML = slider0.value;

        slider0.oninput = function () {
            output0.innerHTML = this.value;
        }
    </script>
    <script>
        var slider1 = document.getElementById("CuidadoSlider");
        var output1 = document.getElementById("CuidadoValue");
        output1.innerHTML = slider1.value;

        slider1.oninput = function () {
            output1.innerHTML = this.value;
        }
    </script>
    <script>
