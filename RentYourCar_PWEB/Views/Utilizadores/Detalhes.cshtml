@using Microsoft.AspNet.Identity
@model RentYourCar_PWEB.Models.UsersViewModels.UserDetailsViewModel
@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-header">@Model.User.Nome</h2>

<div class="row">
    <div class="col-lg-6">
        <p class="lead">Utilizador @Model.User.RoleName</p>

        <h3>Contactos</h3>
        <ul>
            <li><strong>Email: </strong><a href="mailto:@Model.User.Email">@Model.User.Email</a></li>
            <li><strong>Telefone: </strong>@Model.User.Telefone</li>
            <li><strong>Morada: </strong>@Model.User.Morada</li>
        </ul>
    </div>

    @if (string.Compare(User.Identity.GetUserId(), Model.User.Id, StringComparison.Ordinal) != 0)
    {
        <div class="col-lg-6">
            <div class="well">
                <form class="form-horizontal" id="contact-user" name="contact-user" action="mailto:@Model.User.Email" method="post">
                    <fieldset>
                        <legend>Envie uma mensagem a este utilizador</legend>
                        <div class="form-group">
                            <label class="col-lg-2 control-label" for="inputNome">Nome</label>
                            <div class="col-lg-10">
                                <input type="text" id="inputNome" class="form-control" placeholder="Nome" required="required" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label" for="inputEmail">Email</label>
                            <div class="col-lg-10">
                                <input type="email" id="inputEmail" class="form-control" placeholder="Email" required="required" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label" for="inputMensagem">Mensagem</label>
                            <div class="col-lg-10">
                                <textarea id="inputMensagem" class="form-control" placeholder="Mensagem" required="required"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" name="enviar" value="Enviar" class="btn btn-primary" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>

    }
</div>

<div class="row">
    @Html.Partial("_AvaliacoesFornecedorPartial", Model.AvaliacoesFornecedor)
</div>

@if (Model.AvaliacoesCliente != null)
{
    <div class="row">
        @Html.Partial("_AvaliacoesClientePartial", Model.AvaliacoesCliente)
    </div>
}

