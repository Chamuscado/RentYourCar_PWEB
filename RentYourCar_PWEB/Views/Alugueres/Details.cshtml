    </div>
</div>


@section scripts
{
    <script>
        $(document).ready(function() {
            var botoes = $("#botoes");

            botoes.on("click",
                ".js-aceitar",
                function() {
                    var button = $(this);

                    var confirmMessage = "Tem a certeza que pretende aprovar o aluguer do veículo de " +
                        button.attr("DataInicio") +
                        " a " +
                        button.attr("DataFim") +
                        "?";
                    if (confirm(confirmMessage)) {
                        $.ajax({
                            url: "/Alugueres/AprovarAluguer/" + button.attr("AluguerId"),
                            method: 'GET'
                        });
                    }
                });

            botoes.on("click",
                ".js-cancelar",
                function() {
                    var button = $(this);

                    var confirmMessage = "Tem a certeza que pretende cancelar o aluguer do veículo de " +
                        button.attr("DataInicio") +
                        " a " +
                        button.attr("DataFim") +
                        "?";
                    if (confirm(confirmMessage)) {
                        $.ajax({
                            url: "/Alugueres/CancelarAluguer/" + button.attr("AluguerId"),
                            method: 'GET'
                        });
                    }
                });

            botoes.on("click",
                ".js-recusar",
                function() {
                    var button = $(this);

                    var confirmMessage = "Tem a certeza que pretende rejeitar o aluguer do veículo de " +
                        button.attr("DataInicio") +
                        " a " +
                        button.attr("DataFim") +
                        "?";
                    if (confirm(confirmMessage)) {
                        $.ajax({
                            url: "/Alugueres/RejeitarAluguer/" + button.attr("AluguerId"),
                            method: 'GET'
                        });
                    }
                });
        });
    </script>
}